# Default to neovim
alias vi=nvim
alias vim=nvim

# Colorized outputs
alias ls="ls -al -G"

# aws
#
alias aws="$(dirname $(nvm which current))/aws"

# k8s
alias k=$(/sbin/kubectl --context $KUBE_CTX --kubeconfig $KUBECONFIG)
alias kubectl=$/sbin/kubectl --context $KUBE_CTX --kubeconfig $KUBECONFIG)

# terraform
alias tf=terraform

# git
alias g=git

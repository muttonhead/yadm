# Default to neovim
alias vi=nvim
alias vim=nvim

# Colorized outputs
alias ls="ls -al -G"

# aws
alias aws=$(dirname $(nvm which current)/aws)

# k8s
alias k=kubectl --context $KUBE_CTX --config $KUBECONFIG
alias kubectl=kubectl --context $KUBE_CTX --config $KUBECONFIG

# terraform
alias tf=terraform

# git
alias g=git

{
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": [
        "hcl",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "yaml.format.enable": true,
  "yaml.format.singleQuote": true,
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.quickSuggestions": true
  }
}
